
<!-- Header content -->
<header id="header" class="layout-container" role="banner">
    <div class="layout-container-inner pure-g">

        <div class="pure-u-1 pure-u-md-1-3 grid-push-md-1-3 header-section">
        
            <!-- Logo -->
            <a class="header-logo" href="{{ directory }}">
                {% if company.logo_image %}
                    <img src="{{ company.logo_image }}" alt="{{ company.name }}">
                {% else %}
                    <span class="header-title h1">{{ company.name }}</span>
                    <span class="header-slogan h3">{{ company.slogan }}</span>
                {% endif %}
            </a>
        
        </div>

        <div class="pure-u-1 pure-u-md-1-3 grid-pull-md-1-3 header-section">

            <!-- Phone number -->
            <a href="tel:{{ company.phone_number }}" class="header-aside-phone h2">
                Get in touch:
                <i class="fa fa-phone"></i>
                {{ company.phone_number }}
            </a>
        
        </div>

        <div class="pure-u-1 pure-u-md-1-3 header-section">
    
            <!-- Search -->
            <div class="header-search search">
                <form action="/search" method="get">
                    <input type="search" name="q" id="search-q" placeholder="Search this site...">
                    <button type="submit" class="fa fa-search"> Search</button>
                </form>
            </div>
    
        </div>

        <!-- Cart -->
        <div class="pure-u-1 nav-icon header-cart cart-show-if-not-empty" {% if cart.qty == 0 %}style="display:none;"{% endif %}>
            <a href="/shop.php?p=view_cart" class="open-cart">
                <i class="fa fa-shopping-cart"></i>
                <strong class="cart-qty">{{ cart.qty }}</strong> items in cart
            </a>
            - <a href="/checkout.php">Checkout</a>
        </div>

    </div>
</header>

<!-- Main menu / nav -->
<div class="header-nav-outer layout-container">
    <div class="layout-container-inner">

        <!-- nav icons -->
        <div class="header-nav-icons">

            <a data-toggle=".header-nav" class="nav-icon nav-toggle-icon">
                <i class="fa fa-bars fa-lg"></i>
                <span>Menu</span>
            </a>

        </div>

        <!-- Nav -->
        <nav class="header-nav nav nav-sub-indicators nav-sub-indicator-arrows" id="navigation" role="navigation">
            <ul class="nav-primary nav-flexbox">
                {{ header.menu }}
                {% if setup.is_shop %}
                    <li class="nav-link-is-icon"><a href="/shop.php?p=view_cart" class="open-cart">
                        <i class="fa fa-shopping-cart"></i>
                        <span data-format="%d" class="cart-qty">{% if cart.qty != 0 %}{{ cart.qty }}{% endif %}</span>
                        <span class="nav-link-is-icon-title">in Cart</span>
                    </a></li>
                    <li class="nav-link-is-icon"><a href="/customer_home.php">
                        <i class="fa fa-user"></i>
                        <span class="nav-link-is-icon-title">Your Account</span>
                    </a></li>
                {% endif %}
            </ul>
        </nav>
    </div>
</div>
